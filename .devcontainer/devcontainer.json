{
	"name": "ROS devcontainer for vscode",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "ros-noetic-turtlebot3",
	"workspaceFolder": "/catkin_ws",
	"shutdownAction": "stopCompose",
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-vscode.cpptools",  // Extensi√≥n de C++
				"ms-iot.vscode-ros",
				"smilerobotics.urdf",
				"morningfrog.urdf-visualizer",
				"ms-vscode.cmake-tools"
			]
		}
	}
}
